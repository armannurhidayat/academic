<odoo>
	<data>

		<record id="view_academic_course_tree" model="ir.ui.view">
			<field name="name">academic.course.tree</field>
			<field name="model">academic.course</field>
			<field name="type">tree</field>
			<field name="priority" eval="8"/>

			<field name="arch" type="xml">
				<tree string="course">
					<field name="name"/>
					<field name="description"/>
					<field name="responsible_id"/>
				</tree>
			</field>
		</record>

		<record id="view_academic_course_form" model="ir.ui.view">
			<field name="name">academic.course.form</field>
			<field name="model">academic.course</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>

			<field name="arch" type="xml">
				<form string="Course Form">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="title"/>
							</h1>
						</div>

						<group>
							<field name="name"/>
							<field name="responsible_id"/>
						</group>

						<notebook>
							<page string="Description">
								<field name="description"/>
							</page>

							<page string="Sessions">
								<field name="session_ids"> <!-- session_ids = foreach -->
									<tree string="Sessions" editable="bottom"> <!-- Tag Tree digunakan untuk menampilkan data , editable="bottom" untuk live update -->
										<field name="name"/>
										<field name="instructor_id" />
										<field name="start_date" />
										<field name="duration" />
										<field name="seats" />
										<field name="active" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>